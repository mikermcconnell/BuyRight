# ============================================
# SECURITY WARNING: Never commit actual values
# ============================================
# Copy this file to .env.local and add your actual keys
# Ensure .env.local is in .gitignore

# Supabase Configuration (Required)
# Get from: https://app.supabase.com/project/YOUR_PROJECT/settings/api
NEXT_PUBLIC_SUPABASE_URL=https://YOUR_PROJECT.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# CRITICAL: Never expose this key to client-side code
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Google Analytics (Optional)
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# NextAuth Configuration
NEXTAUTH_SECRET=generate_random_secret_min_32_chars
NEXTAUTH_URL=http://localhost:3000

# Application Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development

# Regional Data Configuration
NEXT_PUBLIC_DEFAULT_REGION=ON
NEXT_PUBLIC_SUPPORTED_REGIONS=ON,BC,US_CA,US_NY,US_TX,US_FL

# Security Keys (Server-side only)
# Generate: openssl rand -base64 32
ENCRYPTION_KEY=generate_32_char_encryption_key_here
JWT_SECRET=generate_secure_jwt_secret_here

# Android Build Configuration (Production)
ANDROID_KEYSTORE_PASSWORD=your_keystore_password
ANDROID_KEY_ALIAS=upload
ANDROID_KEY_PASSWORD=your_key_password

# Push Notifications (Optional)
FCM_SERVER_KEY=your_firebase_server_key
ONESIGNAL_APP_ID=your_onesignal_app_id

# Error Tracking (Recommended for Production)
SENTRY_DSN=https://YOUR_KEY@sentry.io/YOUR_PROJECT